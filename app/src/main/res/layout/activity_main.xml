<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="496dp"
        android:layout_height="836dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/back"/>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir desde"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/celBTN"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/celBTN"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="celsius"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/from"
        app:layout_constraintBottom_toTopOf="@id/farBTN"
        android:backgroundTint="#3B3D7F"/>

    <Button
        android:id="@+id/farBTN"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="fahrenheit"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/celBTN"
        app:layout_constraintBottom_toTopOf="@id/kelBTN"
        android:backgroundTint="#3B3D7F"/>

    <Button
        android:id="@+id/kelBTN"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="kelvin"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/farBTN"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#3B3D7F"/>

</androidx.constraintlayout.widget.ConstraintLayout>